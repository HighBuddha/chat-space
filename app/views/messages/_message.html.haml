.message-list__messages{data: {message: {id: message.id}}}
  .message-list__messageDetail
    .message-list__userName 
      = message.user.name
    .message-list__messageDate
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-list__message
    - if message.body.present?
      %p.Message__body
        = message.body
    = image_tag message.image.url, class: 'Message__image' if message.image.present?